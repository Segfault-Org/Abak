<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:id="@+id/button_create_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_button_create_backup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_restore_backup" />

    <Button
            android:id="@+id/button_restore_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_button_restore_backup"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/button_create_backup"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>